/* pages/notice/notice.wxss */
/**index.wxss**/
page {  
  overflow:hidden;
  position:fixed;
  background-image:url('http://lyqpgm.oss-cn-beijing.aliyuncs.com/bflyhdapp/main.jpg');  
  margin: 0px;
  background-size: 100% 100%;
}  
button {
right: 70rpx;
left: 70rpx;   
flex-direction:row;
position: fixed;
display:flex;
box-sizing:border-box;
font-size:40rpx;
justify-content:center;
border-radius:5px;
border: 1px solid #333333;
color:#ffffff;
background-color:#FF9C00;
bottom: 90rpx;
}


.share{
  text-align:center;
  position: fixed;
  display:flex;
  width: 100%;
  justify-content:center;
  
}


.userinfo { 
  display:flex;
  width: 100%;
  height: 100%; 
  flex-direction: column;  
  align-items: center; 
  top: 25rpx;
  position: fixed;
  justify-content:center;
}  
  
.userinfo-avatar { 
  align-items: center; 
  display:flex;
  width: 280rpx;  
  height: 280rpx;
  border: 5px solid #D50840;  
  margin: 15rpx;  
  border-radius: 10px; 
  justify-content:center; 
}  
  
.userinfo-nickname {  
  align-items: center;
  color: #aaa;  
}  
  
