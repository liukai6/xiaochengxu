page {  
  min-height: all;
  position:relative;
  

  background-image:url('http://p0d5ombx1.bkt.clouddn.com/main1.jpg');  
  -webkit-background-size: auto;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: 100% 100%;
}  
button {

justify-content:center;
position: fixed;
display:block;
padding-left:3vh;
padding-right:3vh;
box-sizing:border-box;
font-size:40rpx;
text-align:center;
text-decoration:none;
line-height:2.0;
border-radius:5px;
border: 1px solid #333333;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#ffffff;
background-color:#FF9C00;
bottom: 90rpx;

}

.share{
   width: 100%;
   height: 100%;
   display: flex;
   justify-content:center;
